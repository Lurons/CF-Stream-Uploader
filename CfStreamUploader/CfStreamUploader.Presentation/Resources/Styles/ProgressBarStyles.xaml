<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BlueColor" Color="#4690eb " />

    <Style TargetType="ProgressBar" x:Key="ProgressBarStyle">
        <Setter Property="Foreground" Value="{DynamicResource BlueColor}" />
        <Setter Property="Margin" Value="20,0,20,0" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Maximum" Value="1000" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Value" Value="400" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>