<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="CfStreamUploaderBackGround" Color="{DynamicResource Button1Bg}" />
    <SolidColorBrush x:Key="CfStreamUploaderBG" Color="{DynamicResource BaseColor}" />
    <SolidColorBrush x:Key="CfStreamUploaderTextColor" Color="{DynamicResource TextColor}" />

    <Style TargetType="ProgressBar" x:Key="ProgressBarStyle">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{DynamicResource CfStreamUploaderBackGround}" />
        <Setter Property="Background" Value="{DynamicResource CfStreamUploaderBG}" />
        <Setter Property="BorderBrush" Value="{DynamicResource CfStreamUploaderTextColor}" />
        <Setter Property="Margin" Value="20,0,20,0" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Maximum" Value="1000" />
        <Setter Property="Height" Value="25" />
        <Setter Property="Value" Value="350" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>