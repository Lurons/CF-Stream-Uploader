<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ProgressBar" x:Key="ProgressBarStyle">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{Binding Button1Bg}" />
        <Setter Property="Background" Value="{Binding BaseColor}" />
        <Setter Property="BorderBrush" Value="{Binding TextColor}" />
        <Setter Property="Margin" Value="20,0,20,0" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Maximum" Value="1000" />
        <Setter Property="Height" Value="25" />
        <Setter Property="Value" Value="350" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>