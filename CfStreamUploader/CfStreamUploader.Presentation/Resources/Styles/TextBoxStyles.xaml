<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="CfStreamUploaderBackground" Color="{DynamicResource ContrastColor}" />
    <SolidColorBrush x:Key="CfStreamUploaderTextColor" Color="{DynamicResource TextColor}" />


    <Style TargetType="TextBox" x:Key="HtmlOutputTextBoxStyle">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Height" Value="150" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Background" Value="{DynamicResource CfStreamUploaderBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource CfStreamUploaderTextColor}" />
    </Style>

</ResourceDictionary>